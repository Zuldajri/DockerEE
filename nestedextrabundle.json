{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
	"contentVersion": "1.0.0.0",
	"parameters": {
        "Send-Bundle": {
            "type": "string",
            "metadata": {
                "description": "name custom script"
            }
        },
		"fileUris": {
			"type": "string",
			"metadata": {
				"description": "Location of the custom script"
			}
		},
		"AdminUserid": {
			"type": "string",
			"metadata": {
				"description": "Admin Username"
			}
		},
		"AdminPassword": {
			"type": "securestring",
			"metadata": {
				"description": "Admin Password"
			}
		},
		"aadClientId": {
			"type": "string",
			"metadata": {
				"description": "Service Principal App ID"
			}
		},
		"tenantId": {
			"type": "string",
			"metadata": {
				"description": "Tenant ID"
			}
		},
		"aadClientSecret": {
			"type": "securestring",
			"metadata": {
				"description": "Service Principal App Secret"
			}
		}
	},
	"variables": {
    },

	"resources": [{
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "ucpManager1/sendbundle",
        "location": "[resourceGroup().location]",
        "apiVersion": "2018-06-01",
        "properties": {
            "publisher": "Microsoft.Azure.Extensions",
            "type": "CustomScript",
            "typeHandlerVersion": "2.0",
            "autoUpgradeMinorVersion": true,
          "settings": {},
        "protectedSettings": {
            "fileUris": [
              "[parameters('fileUris')]"
            ],
            "commandToExecute": "[concat('bash ', parameters('Send-Bundle'), ' ', parameters('AdminUserid'), ' ', parameters('AdminPassword'), ' ', parameters('aadClientId'), ' ', parameters('tenantId'), ' ', parameters('aadClientSecret'))]"
          
        }
        }
        }],
	"outputs": {}
}


